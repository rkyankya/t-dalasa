<% presenter = Topics::ShowPresenter.new(self, @topic) %>

<% content_for(:head) do %>
  <title><%= presenter.page_title %></title>
  <%= stylesheet_pack_tag 'TopicsShowPack', media: 'all' %>
<% end %>

<% content_for(:tail) do %>
  <%= javascript_pack_tag 'TopicsShowPack', nonce: true %>
<% end %>

<script type="application/json" id="react-root-data"><%= presenter.props_to_json.html_safe %></script>

<div class="w-full" id="react-root"></div>
